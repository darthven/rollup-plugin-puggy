{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}